{
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "jq -c '{timestamp: (now | todate), prompt: .prompt[0:500]}' >> ~/.claude/prompt-history.jsonl",
            "timeout": 5
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "/Users/shunkakinoki/dotfiles/config/claude/pushover.sh",
            "timeout": 10
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r 'if (.tool.input | test(\"rm -rf|drop database|truncate|DELETE FROM|format\"; \"i\")) then \"⚠️ Risky: \" + .tool.input[0:100] else empty end' | xargs -I {} osascript -e 'display notification \"{}\" with title \"Claude Code Warning\" sound name \"Basso\"'",
            "timeout": 5
          }
        ]
      }
    ],
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.message' | xargs -I {} osascript -e 'display notification \"{}\" with title \"Claude Code\" sound name \"Sonar\"'",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "/Users/shunkakinoki/dotfiles/config/claude/pushover.sh",
            "timeout": 10
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "cat | jq -r '\"Work completed in \" + .cwd + \" (Session: \" + .session_id[0:8] + \")\"' | xargs -I {} osascript -e 'display notification \"{}\" with title \"Claude Code\" sound name \"Sonar\"'",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "/Users/shunkakinoki/dotfiles/config/claude/pushover.sh",
            "timeout": 10
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "/Users/shunkakinoki/dotfiles/config/claude/pushover.sh",
            "timeout": 10
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "/Users/shunkakinoki/dotfiles/config/claude/pushover.sh",
            "timeout": 10
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "/Users/shunkakinoki/dotfiles/config/claude/pushover.sh",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
